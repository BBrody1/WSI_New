{
  "version": 2,
  "cleanUrls": true,
  "builds": [
    { "src": "frontend/**", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/",              "dest": "/frontend/html/search.html" },

    { "src": "/api/(.*)",      "dest": "/api/$1" },

    { "src": "/reset-password","dest": "/frontend/reset-password.html" },

    { "src": "/(.*)",          "dest": "/frontend/html/$1" }
  ]
}